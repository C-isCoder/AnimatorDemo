<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.iscoder.animatordemoone.MainActivity">

    <Button
        android:id="@+id/button_alpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="0dp"
        android:padding="16dp"
        android:text="渐变" />

    <Button
        android:id="@+id/button_rotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:minHeight="0dp"
        android:padding="16dp"
        android:text="旋转" />

    <Button
        android:id="@+id/button_translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:minHeight="0dp"
        android:padding="16dp"
        android:text="平移" />

    <Button
        android:id="@+id/button_scaleY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_alpha"
        android:gravity="center"
        android:minHeight="0dp"
        android:padding="16dp"
        android:text="缩放" />

    <Button
        android:id="@+id/button_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_rotation"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:minHeight="0dp"
        android:padding="16dp"
        android:text="组合" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Hello World!"
        android:textColor="@color/dim_foreground_material_light"
        android:textSize="@dimen/abc_text_size_display_1_material" />
</RelativeLayout>
